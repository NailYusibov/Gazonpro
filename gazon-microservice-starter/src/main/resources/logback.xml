<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logback/logs.log</file>
        <maxFileSize>10MB</maxFileSize>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %X{appName} %X{traceId} %X{spanId} --- [%thread] %logger{36} : %msg%n</pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="FILE" />
    </root>
</configuration>


